extends layout

block content
  div.post
    h1
      a(href=post.url)
        = post.title
    span.date #{post.date.getMonth()+1}.#{post.date.getDate()}.#{post.date.getFullYear()}
    div.post.content
      != post.content
    var listTags = post.tags
    include includes/TagList
    .share(data-url='http://jsantell.com'+post.url, data-text=post.description, data-title='share this page')
    #disqus_thread
    script
      var disqus_identifier = '!{post.slug}';
    script(src='/js/disqus.js')
    noscript Please enable JavaScript to view comments