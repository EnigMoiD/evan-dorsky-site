/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300')

@font-face {
  font-family: 'Audimat';
  src: url('/public/fonts/AUdimat-Regular.otf');
}
@font-face {
  font-family: 'Audimat';
  font-weight: bold;
  src:url('/public/fonts/AUdimat-Regular.otf');
}

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #3178ff
background-color = #faf9f0
text-color = #1b1b1b
line-height = 1.8em

a-main-color()
  a
    color main-color
    :hover
      color main-color
    :visited
      color main-color

a
  text-decoration none

h1.categoryTitle
  a-main-color()

body
  font-family 'Open Sans'
  background-color background-color
  color text-color

img
  width 100%

snippet-margin = 0.3em

div.postPortSnippet
  display static
  float left
  position relative
  height 300px
  width 400px

  div.imgContainer
    height 100%
    width auto
    position absolute
    z-index -1
    img
      z-index -2
      height 100%
      width auto

  color white
  h1
    margin-left snippet-margin
    color white
    display inline
  a
    color white
  .date
    display inline
  div.postPortSnippetText
    margin-left snippet-margin

  div.postPortSnippetInfoContainer
    background linear-gradient(top, rgba(1, 1, 1, 0), rgba(0, 0, 0, 1));
    position absolute
    width 100%
    height line-height*1.8
    bottom 0px

header
  font-family 'Audimat'
  padding 50px 10px
  color #fff
  font-size 40px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 100%
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 90%

  p
    margin-bottom 20px

.post-title
  color text-color

.sidebar
  float left
  width 200px

  a-main-color()

div.post
  a-main-color()

.page-number
  a-main-color()
  display inline

div.tags
  .label
    color main-color
    padding-left 5px
    padding-right 50px

p
  line-height line-height

footer
  width 900px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px