/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Open+Sans:300')

@font-face {
  font-family: 'Audimat';
  src: url('/public/fonts/AUdimat-Regular.otf');
}
@font-face {
  font-family: 'Audimat';
  font-weight: bold; src:url('/public/fonts/AUdimat-Regular.otf');
}

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #3178ff
background-color = #faf9f0
text-color = #1b1b1b

a
  text-decoration none

body
  font-family 'Open Sans'
  background-color background-color
  color text-color

header
  font-family 'Audimat'
  padding 50px 10px
  color #fff
  font-size 40px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 900px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 700px

  p
    margin-bottom 20px

.post-title
  color text-color

.sidebar
  float left
  width 200px

  a
    color main-color
    :hover
      color main-color
    :visited
      color main-color

div.post
  a
    color main-color
    :hover
      color main-color
    :visited
      color main-color

div.tags
  .label
    color main-color
    padding-left 5px
    padding-right 50px

p
  line-height 1.8

footer
  width 900px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px